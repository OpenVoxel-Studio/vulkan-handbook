{
    "version": 8,
    "configurePresets": [
        {
            "name": "base",
            "description": "Common configuration settings for all Windows builds using Ninja and vcpkg.",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
            "environment": {
                "VCPKG_FEATURE_FLAGS": "manifests,versions,binarycaching,registries"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}",
                "CMAKE_C_COMPILER": "$env{ProgramFiles(x86)}/Microsoft Visual Studio/2022/BuildTools/VC/Tools/Llvm/x64/bin/clang.exe",
                "CMAKE_CXX_COMPILER": "$env{ProgramFiles(x86)}/Microsoft Visual Studio/2022/BuildTools/VC/Tools/Llvm/x64/bin/clang++.exe",
                "ENABLE_CLANG_TIDY": true,
                "ENABLE_CPPCHECK": true,
                "ENABLE_TESTING": true,
                "ENABLE_COVERAGE": true
            },
            "vendor": {
                "microsoft.com/VisualStudioSettings/CMake/1.0": {
                    "clangTidyChecks": "llvm-include-order, -modernize-use-override",
                    "enableMicrosoftCodeAnalysis": true,
                    "enableClangTidyCodeAnalysis": true
                }
            }
        },
        {
            "name": "x64-debug",
            "inherits": "base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "x64-asan-debug",
            "inherits": "x64-debug",
            "cacheVariables": {
                "ENABLE_ASAN": true
            }
        },
        {
            "name": "x64-release",
            "inherits": "x64-debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "ENABLE_ASAN": false,
                "ENABLE_CLANG_TIDY": false,
                "ENABLE_CPPCHECK": false,
                "ENABLE_TESTING": false,
                "ENABLE_COVERAGE": false
            }
        },
        {
            "name": "x64-minsizerel",
            "inherits": "x64-release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "MinSizeRel"
            }
        },
        {
            "name": "x64-relwithdebinfo",
            "inherits": "x64-debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "x64-debug-verbose",
            "displayName": "Verbose",
            "configurePreset": "x64-debug",
            "nativeToolOptions": [
                "-v"
            ]
        },
        {
            "name": "x64-asan-debug-verbose",
            "displayName": "ASAN Debug Verbose",
            "configurePreset": "x64-asan-debug",
            "nativeToolOptions": [
                "-v"
            ]
        },
        {
            "name": "x64-relwithdebinfo-verbose",
            "displayName": "RelWithDebInfo Verbose",
            "configurePreset": "x64-relwithdebinfo",
            "nativeToolOptions": [
                "-v"
            ]
        },
        {
            "name": "x64-release",
            "displayName": "Release",
            "configurePreset": "x64-release"
        },
        {
            "name": "x64-minsizerel",
            "displayName": "MinSizeRel",
            "configurePreset": "x64-minsizerel"
        },
        {
            "name": "x64-relwithdebinfo",
            "displayName": "RelWithDebInfo",
            "configurePreset": "x64-relwithdebinfo"
        }
    ]
}