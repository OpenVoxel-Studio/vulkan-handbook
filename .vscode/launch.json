{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "inputs": [
        {
            "id": "cmakeCache.TOOLCHAIN_FILE",
            "type": "command",
            "command": "cmake.cacheVariable",
            "args": {
                "name": "CMAKE_TOOLCHAIN_FILE"
            }
        }
    ],
    "configurations": [
        {
            "name": "(Windows) Launch",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${command:cmake.launchTargetPath}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "VK_LAYER_PATH",
                    "value": "${env:VULKAN_SDK}/Bin"
                },
                {
                    "name": "PATH",
                    "value": "${env:PATH}:${command:cmake.getLaunchTargetDirectory}"
                },
                {
                    "name": "VK_INSTANCE_LAYERS",
                    "value": "VK_LAYER_KHRONOS_validation"
                }
            ],
            "console": "integratedTerminal",
            "preLaunchTask": "CMake: clean rebuild"
        },
        {
            // FIXME: not run
            "name": "(ctest) Launch",
            "type": "cppvsdbg",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "presentation": {
                "hidden": true,
            },
            // Resolved by CMake Tools:
            "program": "${cmake.testProgram}",
            "args": [
                "${cmake.testArgs}"
            ],
            "environment": [
                {
                    "name": "VK_LAYER_PATH",
                    "value": "${env:VULKAN_SDK}/Bin"
                },
                {
                    "name": "PATH",
                    "value": "${env:PATH}:${command:cmake.getLaunchTargetDirectory}"
                },
                {
                    "name": "VK_INSTANCE_LAYERS",
                    "value": "VK_LAYER_KHRONOS_validation"
                }
            ],
        },
        {
            "name": "(shaders) Launch",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${env:ProgramFiles}/RenderDoc/qrenderdoc.exe",
            "args": [
                "--capture-file",
                "${workspaceFolder}/capture.rdc",
                "${command:cmake.launchTargetPath}"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "VK_LAYER_PATH",
                    "value": "${env:VULKAN_SDK}/Bin"
                },
                {
                    "name": "PATH",
                    "value": "${env:PATH}:${command:cmake.getLaunchTargetDirectory}"
                },
                {
                    "name": "VK_INSTANCE_LAYERS",
                    "value": "VK_LAYER_KHRONOS_validation"
                }
            ],
        }
    ],
}